<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mvm"
            type="com.arctouch.pablo.tmdb.viewmodel.MovieViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/contact_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:onClick="@{mvm.onReadMoreClicked}"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                app:image="@{mvm.backdropPath}" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ellipsize="end"
                android:shadowColor="@android:color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="@{mvm.title}"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/release_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/release_date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/release_date_label"
                android:layout_toRightOf="@id/release_date_label"
                android:layout_marginLeft="5dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@{mvm.releaseDate}"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/genres_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/release_date_label"
                android:layout_alignLeft="@id/release_date_label"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/genres"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/genres_label"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/genres_label"

                android:lineSpacingMultiplier="1.2"
                android:text="@{mvm.genres}"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
